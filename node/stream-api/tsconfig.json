{
    "extends": "ts-node/node16/tsconfig.json",
    "compilerOptions": {
        "target": "ES2015",
        "module": "ES2020",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ES6"],
        "strict": true,
        "esModuleInterop": true,
        "isolatedModules": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}